BOX = "virusstyle/ubuntu-22.04-desktop-amd64"
BOX_Ver = "1.0.0"

VM_GUEST_PORT = 22
VM_HOST_PORT = 2244

#home = ENV['HOME']

Vagrant.require_version ">= 1.3.5"

Vagrant.configure("2") do |config|

  config.vm.define "VBOX-UBT" do |jd| 
    jd.vm.box = BOX
    jd.vm.box_version = BOX_Ver
    #jd.vm.network "public_network", bridge: "Realtek PCIe GbE Family Controller", use_dhcp_assigned_default_route: true
    #jd.vm.network "public_network", bridge: "Realtek PCIe GbE Family Controller", auto_config: false
    jd.vm.network "forwarded_port", guest: VM_GUEST_PORT, host: VM_HOST_PORT 
    #jd.vm.network "private_network", :type => 'dhcp' 
    jd.vm.box_check_update = false
    jd.vm.hostname = "ubt2204j.vagrant"
    #jd.vm.define "vbox-ubt1-ubt2204inionx"
    jd.vm.disk :disk, size: "80GB", primary: true
    jd.vm.synced_folder ".", "/home/vagrant/vagrant" #, type: "smb"
    jd.vm.provider "virtualbox" do |vb|
      vb.memory = 24000
      vb.cpus = 6
      vb.name = "vbox-ubt1-j2204"
      vb.customize ['modifyvm', :id, '--nested-hw-virt', 'on']
      vb.customize ["modifyvm", :id, "--audio", "none"]

    end
  #shell inline provision
    jd.vm.provision "shell",  inline: <<-SHELL
      #sudo ip address add 10.0.2.25/24 brd 10.0.2.255 dev enp0s3
      #sudo ip route add default via 10.0.2.1
      sudo apt-get update
      sudo apt full-upgrade --assume-yes
      #sudo apt-get install -y apache2 
    SHELL
 

  #shell file script provision
    #jd.vm.provision "shell", path: "script.sh" 
   


  #jd.vm.provision "ansible" do |ansible|
  #      ansible.playbook = "site.yml"
  #      ansible.verbose = "vv"  
  #end


   end
end


